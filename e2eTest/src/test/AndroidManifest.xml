<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firebase.ui.auth.e2etest.test">

    <application>
        <!--
          Declare ComponentActivity as a launcher activity for Robolectric.
          ActivityScenario (used by Compose's test rule) launches with ACTION_MAIN
          and CATEGORY_LAUNCHER, which requires a resolvable activity in the manifest.
        -->
        <activity
            android:name="androidx.activity.ComponentActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          Test activity for email link deep link handling.
          This handles ACTION_VIEW intents with email link URLs from the Firebase Auth Emulator.
        -->
        <activity
            android:name="com.firebase.ui.auth.compose.testutil.EmailLinkTestActivity"
            android:exported="false"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Handle emulator links (http://127.0.0.1:9099/...) -->
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="127.0.0.1" />
                <data android:host="fake-project-id.firebaseapp.com" />
            </intent-filter>
        </activity>
    </application>

    <!-- No runtime permissions needed for unit tests -->

</manifest>

